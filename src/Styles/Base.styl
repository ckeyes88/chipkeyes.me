html {
  font-size: $rem-base;
}

html,
body {
  width: 100%;
  min-height: 100%;
  
  

}

body {
  display: flex;
  flex-direction: column;
  background-attachment: fixed;
  background-color: $gray--100;
  .app {
    
    position: relative;
    z-index: 0;
    

    .left-triangle {
      background-attachment: fixed;
      position: absolute;
      filter: drop-shadow(3px 3px 3px $black);
      border-left: 150px solid transparent;
      border-right: 150px solid transparent;
      border-top: 450px solid;
      border-top-color: $logo-colors[random(0, 5)];
      left: -150px;
      transform: rotate(165deg);
      bottom: 100px;
      transition: border-top-color 0.3s cubic-bezier(0.5, -0.5, 0.5, 1.5);

      +min-screen($media-small) {
        border-left: 400px solid transparent;
        border-right: 400px solid transparent;
        border-top: 600px solid;
        left: -400px;
      }

      +min-screen($media-medium) {
        border-left: 300px solid transparent;
        border-right: 300px solid transparent;
        border-top: 450px solid;
        left: -250px;
        bottom: -50px;
      }
    
    }

    .right-triangle {
      background-attachment: fixed;
      content: "";
      filter: drop-shadow(3px 3px 3px $black);
      position: absolute;
      border-left: 150px solid transparent;
      border-right: 150px solid transparent;
      border-top: 450px solid;
      border-top-color: $logo-colors[random(0, 5)];
      transition: border-top-color 0.3s cubic-bezier(0.5, -0.5, 0.5, 1.5);
      
      transform: rotate(0);
      right: -150px;
      top: 0
    }
  }
  
  
  main {
    position: relative;
    
    min-height: calc(100vh - 75px);
    height: calc(100vh - 75px);
    overflow: hidden;
    z-index: 1;
  }
}
* {
  box-sizing: border-box;

  &:before,
  &:after {
    box-sizing: inherit;
  }
}
