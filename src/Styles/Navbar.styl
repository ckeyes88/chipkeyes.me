
#main-nav {
  // position: fixed;
  z-index: 10;
  height: rem(75);
  font-family: Web;
  font-weight: 900;
  font-size: rem(25);
  letter-spacing: rem(3);
  width: 100%;
  // background-color: rgba(0, 0, 0, 0.4);
  // color: #e6e6ea;

  ul {
    height: 100%;
    list-style-type: none;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    
    li a {
      text-decoration: none;
      color: $black;
    }

    li {
      transform: rotate(0) scale(1);
      transition: transform 0.2s cubic-bezier(0.2, -1.5, 0.2, 2.3);
      
    }

    li:hover {
      transform: rotate(8deg) scale(1.2);
      transition: transform 0.2s cubic-bezier(0.2, -1.5, 0.2, 2.3);
    }
  }
}
