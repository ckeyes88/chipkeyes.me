    // }
  }
  #skills {
    // background: rgba($gray--050, 0.6);
    // filter: drop-shadow(1px 1px 1px $black);
    // overflow-y: auto;
    // scroll-y: auto;
    margin: rem(10);
    padding: rem(10);
    max-width: 75%;
    width: 75%;
    display: flex;
    flex-direction: column; // justify-content: space-around;
    ul {
      display: flex;
      justify-content: flex-start;
      flex-direction: column;
      align-items: center; // flex-wrap: wrap
      margin: rem(10);
      li {
        font-size: rem(24);
        margin: rem(2);
      }
    }
