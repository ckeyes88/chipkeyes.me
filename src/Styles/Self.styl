  text-align: center;
  height: 100%;
  font-family: Web;
  h3 {
    font-weight: bold;
    font-size: rem(30);
  }
  #profile {
    filter: drop-shadow(2px 2px 2px $black);
    margin: rem(15);
  }
  #bio {
    background: rgba($gray--200, 0.7);
    // overflow-y: auto;
    margin: rem(20);
    padding: rem(20);
    max-width: 75%;
    width: 75%;
    display: flex;
    flex-direction: column;
    // scroll-y: auto;
    p {
      font-weight: bold;
      margin: rem(10);
      text-align: justify;
      font-size: rem(22);
    } // &:nth-child(odd) h3 {
